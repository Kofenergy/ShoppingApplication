<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingApplication.Controls.ProductToBuy"
             x:Name="this">

    <Frame 
        IsVisible="{Binding IsProductNotBought}"
        BindingContext="{x:Reference this}"
        Margin="5">

        <Grid
            ColumnDefinitions="*,*,*,*"
            Padding="5">

            <VerticalStackLayout
                Grid.Column="0"
                VerticalOptions="Center"
                HorizontalOptions="Center">

                <Label 
                    x:Name="NameLabel"
                    Text="{Binding ProductName, FallbackValue=DefaultName}"
                    FontSize="24"
                    Margin="10" />

            </VerticalStackLayout>

            <VerticalStackLayout
                Grid.Column="1"
                VerticalOptions="Center">

                <HorizontalStackLayout
                    HorizontalOptions="Center">

                    <Label
                        x:Name="QuantityLabel"
                        Text="{Binding Quantity, FallbackValue=-1}"
                        FontSize="16"
                        HorizontalOptions="Center"/>

                    <Label
                        x:Name="UnitLabel"
                        Text="{Binding QuantityUnit, FallbackValue=Unit}"
                        FontSize="16"
                        HorizontalOptions="Center" />

                </HorizontalStackLayout>

            </VerticalStackLayout>

            <VerticalStackLayout
                Grid.Column="2"
                Padding="5"
                VerticalOptions="Center">

                <Label
                    x:Name="ShopLabel"
                    FontSize="16"
                    Text="{Binding DefaultShop, FallbackValue=DefaultShop}"/>

            </VerticalStackLayout>

            <VerticalStackLayout
                Grid.Column="3"
                Padding="5"
                VerticalOptions="Center"
                HorizontalOptions="Center">

                <CheckBox
                    IsChecked="{Binding IsProductBought, FallbackValue=false}"
                    CheckedChanged="IsBought_Changed"
                    Scale="1.6"/>

            </VerticalStackLayout>

        </Grid>

    </Frame>

</ContentView>
