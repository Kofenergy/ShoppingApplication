<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingApplication.Views.NewProductPage"
             Title="New product">

    <VerticalStackLayout Margin="10">

        
        <Label 
            Text="Add new product"
            FontSize="24"
            Margin="10"
            HorizontalOptions="Center"
            
           />

        <Editor 
            x:Name="NameEditor"
            Placeholder="Product name"
            Margin="10"
            FontSize="20"
            HorizontalOptions="FillAndExpand"
            WidthRequest="300"/>

        <HorizontalStackLayout
            Margin="10"
            HorizontalOptions="Center">

            <Picker
                x:Name="CategoryPicker"
                Title="Select the category"
                Margin="10"
                FontSize="20"/>

        </HorizontalStackLayout>

        <Editor 
            x:Name="QuantityEditor"
            Placeholder="Amount"
            Margin="10"
            FontSize="20"
            HorizontalOptions="FillAndExpand"
            WidthRequest="300"/>

        <Editor 
            x:Name="UnitEditor"
            Placeholder="Unit"
            Margin="10"
            FontSize="20"
            HorizontalOptions="FillAndExpand"
            WidthRequest="300"/>
           
        <Editor 
            x:Name="ShopEditor"
            Placeholder="Store"
            Margin="10"
            FontSize="20"
            HorizontalOptions="FillAndExpand"
            WidthRequest="300"/>

        <Button 
            Text="Add"
            HorizontalOptions="Center"
            WidthRequest="200"
            Clicked="CreateButton_Clicked"
            Margin="20"
            FontSize="20"
            BackgroundColor="white"/>

    </VerticalStackLayout>

</ContentPage>
